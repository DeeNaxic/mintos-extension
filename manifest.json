{
    "name"              : "Investments++",
    "description"       : "Improve the Mintos.com P2P investment experience, by enabling a rich set of additional features, and post-processing of the website.",
    "version"           : "1.0.0",
    "manifest_version"  : 2,
    
    "options_ui"        :
    {
        "page"          : "options/index.html",
        "open_in_tab"   : false
    },
    
    "icons"             :
    {
        "16"            : "icons/icon-16.png",
        "48"            : "icons/icon-48.png",
        "128"           : "icons/icon-128.png"
    },
    
    "permissions"       :
    [
        "storage"
    ],
    
    "content_scripts"   :
    [
        {
            "matches"   : ["https://www.mintos.com/en/*"],
            "js"        :
            [
                "scripts/util.js",
                "scripts/loan.js"
            ]
        },
        {
            "matches"   : ["https://www.mintos.com/en/overview/"],
            "js"        :
            [
                "scripts/util.js",
                "scripts/overview.js"
            ]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/finished-investments/*"],
            "js"        :
            [
                "scripts/util.js",
                "scripts/investments.js",
                "scripts/investmentsFinished.js"
            ]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/current-investments/*"],
            "js"        :
            [
                "scripts/util.js",
                "scripts/investments.js",
                "scripts/investmentsCurrent.js"
            ]
        }
    ]
}
