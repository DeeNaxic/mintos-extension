{
    "name"              : "www.mintos.com",
    "description"       : "www.mintos.com",
    "version"           : "1.0.0",
    "manifest_version"  : 2,
    
    "options_ui"        :
    {
        "page"          : "options/options.html",
        "open_in_tab"   : false
    },
    
    "icons"             : 
    { 
        "16"            : "icons/icon-16.png",
        "48"            : "icons/icon-48.png",
        "128"           : "icons/icon-128.png" 
    },
    
    "permissions"       :
    [
        "storage"
    ],
    
    "content_scripts"   :
    [
        {
            "matches"   : ["https://www.mintos.com/*"],
            "js"        : ["pages/util.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/overview/"],
            "js"        : ["pages/overview.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/*"],
            "js"        : ["pages/investments.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/finished-investments/*"],
            "js"        : ["pages/investments finished.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/current-investments/*" ],
            "js"        : ["pages/investments current.js" ]
        }
    ]
}
