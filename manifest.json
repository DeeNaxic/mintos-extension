{
    "name"              : "www.mintos.com",
    "description"       : "www.mintos.com",
    "version"           : "1.0.0",
    "manifest_version"  : 2,
    
    "options_page"      : "options.html",
    
    "permissions"       :
    [
        "storage"
    ],
    
    "content_scripts"   :
    [
        {
            "matches"   : ["https://www.mintos.com/*"],
            "js"        : ["js/util.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/overview/"],
            "js"        : ["js/overview.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/*"],
            "js"        : ["js/investments.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/finished-investments/*"],
            "js"        : ["js/investments finished.js"]
        },
        {
            "matches"   : ["https://www.mintos.com/en/my-investments/current-investments/*" ],
            "js"        : ["js/investments current.js" ]
        }
    ]
}
